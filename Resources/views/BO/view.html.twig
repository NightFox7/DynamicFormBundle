<div class="row">
    <h1>{{ 'dynamicForm.bo.formList' | trans }}</h1>
    <hr/>
    <a ng-href="{{ path('talan_dynamic_form_bo') }}"  target="_self">{{ 'dynamicForm.bo.newForm' | trans }}</a>
    <table datatable class="table table-striped table-hover">
        <thead>
        <tr>
            <th>{{ 'dynamicForm.bo.id' | trans }}</th>
            <th>{{ 'dynamicForm.bo.name' | trans }}</th>
            <th>{{ 'dynamicForm.bo.actions' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for form in forms %}
        <tr>
            <td>{{ form.id }}</td>
            <td>{{ form.name }}</td>
            <td><center>
                <a ng-href="{{ path('talan_dynamic_form_bo', {'form': form.id}) }}"  target="_self" title="{{ 'dynamicForm.btn.edit' }}">
                    <i class="glyphicon glyphicon-pencil" style="color: dodgerblue;"></i>
                </a>
                <a href="{{ path('talan_dynamic_form_bo_remove', {'form': form.id}) }}"  target="_self" title="{{ 'dynamicForm.btn.delete' }}">
                    <i class="glyphicon glyphicon-remove" style="color: crimson;"></i>
                </a>
            </center></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>