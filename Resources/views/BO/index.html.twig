{% extends 'TalanDynamicFormBundle::layout.html.twig' %}
{% block body %}
    <form class="form-horizontal" action="{{ path('talan_dynamic_form_bo', {'form': form.id}) }}" method="POST">
        <div class="row">
            <h1>{{ 'dynamicForm.bo.formInfo' | trans }}</h1>
            <hr/>
            {% if form.id %}
            <div class="form-group">
                <label for="form-id" class="col-md-4 control-label">{{ 'dynamicForm.bo.id' | trans }}</label>
                <div class="col-md-8">
                    <input type="text" ng-model="formId" ng-init="formId = {{form.id}}" id="form-id" class="form-control" value="{{ form.id }}" disabled>
                </div>
            </div>
            {% endif %}
            <div class="form-group">
                <label for="form-name" class="col-md-4 control-label">{{ 'dynamicForm.bo.name' | trans }}</label>
                <div class="col-md-8">
                    <input type="text" id="form-name" name="form-name" class="form-control" required="true" value="{{ form.name }}">
                </div>
            </div>
            <div class="form-group">
                <label for="form-description" class="col-md-4 control-label">{{ 'dynamicForm.bo.description' | trans }}</label>
                <div class="col-md-8">
                    <textarea id="form-description" name="form-description" class="form-control" required="true">{{ form.description }}</textarea>
                </div>
            </div>
            {% verbatim %}<input type="hidden" id="form-json" name="form-json" class="form-control" required="true" value="{{form}}">{% endverbatim %}
        </div>

        <div class="row">
            <h2>{{ 'dynamicForm.bo.formBuilder' | trans }}</h2>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'dynamicForm.bo.builder' | trans }}</h3>
                    </div>
                    <div fb-builder="default"></div>
                    <div class="panel-footer">
                        <div class="checkbox">
                            <label><input type="checkbox" ng-model="isShowScope" />
                                Show scope
                            </label>
                        </div>
                        {% verbatim %}<pre ng-show="isShowScope">{{form}}</pre>{% endverbatim %}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div fb-components></div>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <center>
                <button type="submit" class="btn btn-primary">{{ 'dynamicForm.btn.save' | trans }}</button>
                <button type="reset" class="btn btn-default">{{ 'dynamicForm.btn.reset' | trans }}</button>
            </center>
        </div>
    </form>

    <div class="row">
        <h2>{{ 'dynamicForm.bo.formPreview' | trans }}</h2>
        <hr/>
        <form class="form-horizontal">
            <div ng-model="input" fb-form="default" fb-default="defaultValue"></div>
            <div class="form-group">
                <div class="col-md-8 col-md-offset-4">
                    <input type="submit" ng-click="submit()" class="btn btn-default"/>
                </div>
            </div>
        </form>
        <div class="checkbox">
            <label><input type="checkbox" ng-model="isShowScope" ng-init="isShowScope=true" />
                Show scope
            </label>
        </div>
        {% verbatim %}<pre ng-show="isShowScope">{{input}}</pre>{% endverbatim %}
    </div>

    <div class="row">
        <div class="col-md-12 footer"></div>
    </div>
{% endblock body %}